@model Upravljalec_Nalog.Models.NalogaDto

@{
    ViewData["Title"] = "Ustvari";
}

<h1>Ustvari</h1>

<h4>Nalogo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ime" class="control-label"></label>
                <input asp-for="Ime" class="form-control" />
                <span asp-validation-for="Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZacetniDatum" class="control-label"></label>
                <input asp-for="ZacetniDatum" class="form-control" />
                <span asp-validation-for="ZacetniDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KoncniDatum" class="control-label"></label>
                <input asp-for="KoncniDatum" class="form-control" />
                <span asp-validation-for="KoncniDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ustvari" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Nazaj na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
